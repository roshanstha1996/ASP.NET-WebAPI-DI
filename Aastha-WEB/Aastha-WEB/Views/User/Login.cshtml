@model Aastha_WEB.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    .btn {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 6px;
    }
    .btn-default:hover {
        color: #333;
        background-color: #1b95ec;
        border-color: #adadad;
    }
</style>
</head>
<body>
    <div class="container body-content">
        <div class="col-md-6">
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                <h2 class="registrationclass" style="text-align: center">USER LOGIN</h2>
                <div style="width: 50%; border: 6px solid #ffcf00; margin: 0 auto;"></div>
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group" style="padding: 5px;width:80%;text-align: center">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="padding: 5px;width: 80%;text-align: center">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="padding: 5px;text-align: center;">
                            <div class="col-md-offset-2 col-md-6">
                                <input type="submit" value="Login" class="btn btn-default" style="width: 100px;"  />
                            </div>
                        </div>
                    </div>
                    }
                </div>
        </div>
</body>
</html>
